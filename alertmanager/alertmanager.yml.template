global:
  smtp_smarthost: '${SMTP_SMARTHOST}'
  smtp_from: '${SMTP_FROM}'
  smtp_auth_username: '${SMTP_AUTH_USERNAME}'
  smtp_auth_password: '${SMTP_AUTH_PASSWORD}'
  smtp_require_tls: ${SMTP_REQUIRE_TLS}

# Routing configuration
route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 12h
  receiver: 'default'
  routes:
    # Critical alerts -> immediate notification
    - match:
        severity: critical
      receiver: 'critical-alerts'
      group_wait: 10s
      repeat_interval: 5m
    
    # Performance alerts -> batched notification
    - match:
        category: performance
      receiver: 'performance-alerts'
      group_interval: 10m
      repeat_interval: 4h
    
    # Network alerts -> network team
    - match:
        category: network
      receiver: 'network-alerts'
      group_interval: 15m
      repeat_interval: 6h
    
    # SLA violations -> management notification
    - match:
        category: sla
      receiver: 'sla-alerts'
      group_wait: 5m
      repeat_interval: 2h

# Inhibition rules - suppress redundant alerts
inhibit_rules:
  # Suppress warning if critical alert is firing
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']
  
  # Suppress individual alerts if circuit breaker is open
  - source_match:
      alertname: 'CircuitBreakerOpen'
    target_match_re:
      alertname: '(HighUploadDuration|SlowUploadSpeed|TestFailures)'
    equal: ['instance']

# Alert receivers/notification channels
receivers:
  - name: 'default'
    webhook_configs:
      - url: 'http://webhook-logger:8080/webhook'
        send_resolved: true

  - name: 'critical-alerts'
